    <Grid>
        <NavigationView
            x:Name="MainNv"
            AlwaysShowHeader="true"
            IsBackButtonVisible="Collapsed"
            PaneTitle="Tu Negocio"
            SelectionChanged="MainNv_SelectionChanged">
            <NavigationView.HeaderTemplate>
                <DataTemplate>
                    <ScrollViewer HorizontalScrollMode="Enabled">
                        <StackPanel Height="50" Orientation="Horizontal">
                            <Button
                                Name="OpenClientDialog"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="#e8cd1e"
                                Click="OpenClientDialog_Click"
                                Content="Nuevo cliente"
                                FontSize="16"
                                Foreground="Black" />
                            <Button
                                Name="OpenBusinessDialog"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="#e8cd1e"
                                Click="OpenBusinessDialog_Click"
                                Content="Agregar otro negocio"
                                FontSize="16"
                                Foreground="Black" />
                            <Button
                                Name="OpenProviderDialog"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="#e8cd1e"
                                Click="OpenProviderDialog_Click"
                                Content="Nuevo proveedor"
                                FontSize="16"
                                Foreground="Black" />
                            <Button
                                Name="OpenCategoryDialog"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="#e8cd1e"
                                Click="OpenCategoryDialog_Click"
                                Content="Nueva categoría"
                                FontSize="16"
                                Foreground="Black" />
                            <Button
                                Name="OpenProductDialog"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="#e8cd1e"
                                Click="OpenProductDialog_Click"
                                Content="Nuevo producto"
                                FontSize="16"
                                Foreground="Black" />
                            <Button
                                Name="OpenSaleDialog"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="#e8cd1e"
                                Click="OpenSaleDialog_Click"
                                Content="Nueva venta"
                                FontSize="16"
                                Foreground="Black" />
                        </StackPanel>
                    </ScrollViewer>
                </DataTemplate>
            </NavigationView.HeaderTemplate>
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Inicio"
                    Icon="Home"
                    IsSelected="True"
                    Tag="Tu_Negocio.Pages.MainPage" />
                <NavigationViewItem
                    Content="Clientes"
                    Icon="People"
                    Tag="Tu_Negocio.Pages.ClientsPage" />
                <NavigationViewItem
                    Content="Productos"
                    Icon="StopSlideShow"
                    Tag="Tu_Negocio.Pages.ProductsPage" />
                <NavigationViewItem
                    Content="Ventas"
                    Icon="Shop"
                    Tag="Tu_Negocio.Pages.SalesPage" />
                <NavigationViewItem
                    Content="Proveedores"
                    Icon="Trim"
                    Tag="Tu_Negocio.Pages.SupplierPage" />
            </NavigationView.MenuItems>
            <Frame x:Name="contentFrame" />
        </NavigationView>

