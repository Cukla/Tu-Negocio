                    Foreground="#454d54"
                    Text="Producto vendido" />
                <ComboBox
                    Name="ProductsCb"
                    Width="400"
                    Height="40"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Background="White"
                    BorderBrush="#454d54"
                    Foreground="#454d54"
                    PlaceholderForeground="#67737e"
                    PlaceholderText="Seleccione un producto"
                    SelectionChanged="ProductsCb_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="local1:Product">
                            <TextBlock Text="{x:Bind Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock
                    Width="400"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#454d54"
                    Text="Fecha de la venta" />
                <CalendarDatePicker
                    Name="SaleDateDp"
                    Height="40"
                    MinWidth="400"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Foreground="#454d54"
                    PlaceholderText="Seleccione la fecha de la venta" />
                <TextBlock
                    Width="400"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#454d54"
                    Text="Metodo de pago" />
                <ComboBox
                    Name="PmCb"
                    Width="400"
                    Height="40"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Background="White"
                    BorderBrush="#454d54"
                    Foreground="#454d54"
                    PlaceholderForeground="#67737e"
                    PlaceholderText="Seleccione el metodo de pago"
                    SelectionChanged="PmCb_SelectionChanged">
                    <x:String>Efectivo</x:String>
                    <x:String>Tarjeta</x:String>
                    <x:String>Transferencia bancaria</x:String>
                    <x:String>Mercado Pago</x:String>
                    <x:String>Otro</x:String>
                </ComboBox>
                <TextBlock
                    Width="400"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#454d54"
                    Text="Agregar un cliente a la venta" />
                <ComboBox
                    Name="SaleClientCb"
                    Width="400"
                    Height="40"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Background="White"
                    BorderBrush="#454d54"
                    Foreground="#454d54"
                    PlaceholderForeground="#67737e"
                    PlaceholderText="Seleccione un cliente"
                    SelectionChanged="SaleClientCb_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="local1:Client">
                            <TextBlock Text="{x:Bind Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button
                    Name="CommitSale"
                    Width="400"
                    Height="40"
                    Margin="20"
                    HorizontalAlignment="Center"
                    Background="#e8cd1e"
                    Click="CommitSale_Click"
                    Content="Confirmar venta"
                    FontSize="16" />
            </StackPanel>
            <Button
                Name="HideSaleDialog"
                Width="40"
                Height="40"
                Margin="15"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="HideSaleDialog_Click"
                Foreground="White">
                <SymbolIcon Foreground="Black" Symbol="Back" />
            </Button>
        </Grid>
    </Grid>

</Window>
